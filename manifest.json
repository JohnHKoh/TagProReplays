{
  "manifest_version": 2,
  "name": "TagProReplays",
  "version": "1.2.30",
  "description": "Save Replays from within TagPro Games",
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "debug.js",
      "logger.js",
      "cookies.js",
      "background.js",
      "renderer.js",
      "file_system.js",
      "whammy.js",
      "jquery.js",
      "jszip.min.js",
      "FileSaver.min.js"
    ]
  },
  "content_scripts": [{
    "exclude_matches": [ "http://support.koalabeast.com/*" ],
    "js": [
      "debug.js",
      "logger.js",
      "cookies.js",
      "jquery.js",
      "renderer.js",
      "previewer.js",
      "main.js",
      "loadTextures.js",
      "ui/bootstrap.min.js"
    ],
    "css": [
      "ui/record.css"
    ],
    "matches": [
      "http://*.koalabeast.com/*",
      "http://*.newcompte.fr/*",
      "http://tangent.jukejuice.com/*"
    ],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    "replayRecording.js",
    "img/*.png",
    "ui/menus.css",
    "ui/record.css",
    "ui/menus.html",
    "ui/bootstrap.min.css",
    "ui/bootstrap.css",
    "ui/glyphicons-halflings-regular.eot",
    "ui/glyphicons-halflings-regular.svg",
    "ui/glyphicons-halflings-regular.ttf",
    "ui/glyphicons-halflings-regular.woff"
  ]
}
